---
- name: Get desktop launcher
  stat:
    path: '/home/{{ansible_user}}/.local/share/applications/spotify-adblock.desktop'
  register: launcher

- name: Install
  shell: make install
  args:
    chdir: '{{ source_dir }}'
    creates: /usr/local/lib/spotify-adblock.so
  become: yes



